<style lang="scss">
  .hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;

    img {
      object-fit: cover;
      object-position: top;
      border-radius: 1.5rem;
      box-shadow: var(--shadow-md);
    }
  }

  .links {
    display: flex;
    flex-direction: column;
    gap: 1rem;

    a {
      width: 100%;
      justify-content: center;
    }
  }

  .avatar-wrapper {
        position: relative;
  }

  @media (min-width: 50em) {
    .hero {
      display: grid;
      grid-template-columns: 6fr 4fr;
      // padding-inline: 0.5rem;
      gap: 3.75rem;

      img {
        aspect-ratio: 3 / 4;
        border-radius: 2.5rem;
        object-fit: cover;
        position: relative;
        // filter: grayscale(75%) contrast(1);
      }

      .avatar-wrapper {
        position: relative;
      }

      .overlay {
        position: absolute;
        width: 100%;
        top: 0px;
        bottom: 6px;
        z-index: 2;
        border-radius: 2.5rem;
        mix-blend-mode: multiply;
        transition: opacity 350ms linear 0s;

      }
    }

    .links {
      margin-top: 0.5rem;
      flex-direction: row;
      gap: 0.5rem;

      a {
        width: auto;
        justify-content: flex-start;
      }
    }
  }
</style>
