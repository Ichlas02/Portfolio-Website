import BaseLayout from "../layouts/BaseLayout.astro";
import '@/styles/globals.css'

import {
  Carousel,
  CarouselContent,
  CarouselItem,
  CarouselNext,
  CarouselPrevious,
} from "@/components/ui/carousel"

// Component Imports]
import About from "../components/About.astro";
